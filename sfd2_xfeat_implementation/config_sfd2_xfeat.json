{
  "model_name": "SFD2_XFeat",
  "outdim": 128,
  "semantic_channels": 20,
  "require_stability": false,
  
  "training": {
    "epochs": 40,
    "batch_size": 4,
    "learning_rate": 1e-4,
    "weight_decay": 1e-6,
    "lr_step_size": 30,
    "lr_gamma": 0.1,
    "save_interval": 10,
    "num_workers": 4
  },
  
  "loss_weights": {
    "det_weight": 1.0,
    "desc_weight": 1.0,
    "sem_weight": 0.5,
    "margin": 1.0
  },
  
  "data": {
    "data_root": "./data",
    "image_size": [480, 640],
    "augmentation": {
      "random_crop": true,
      "random_flip": true,
      "random_rotation": true,
      "color_jitter": true
    }
  },
  
  "semantic_guidance": {
    "seg_desc": true,
    "seg_feat": false,
    "seg_det": true,
    "seg_cls": false
  },
  
  "paths": {
    "log_dir": "./logs/sfd2_xfeat",
    "checkpoint_dir": "./checkpoints/sfd2_xfeat",
    "pretrained_model": null
  },
  
  "hardware": {
    "device": "cuda",
    "num_gpus": 1,
    "mixed_precision": false
  },
  
  "evaluation": {
    "val_interval": 5,
    "metrics": ["mse", "mae", "repeatability"],
    "save_predictions": false
  }
}